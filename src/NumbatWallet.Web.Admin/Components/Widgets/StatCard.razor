@namespace NumbatWallet.Web.Admin.Components.Widgets

<div class="stat-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="card-subtitle mb-2 text-muted">@Title</h6>
                    <h2 class="card-title mb-0">@Value</h2>
                    @if (!string.IsNullOrEmpty(Change))
                    {
                        <span class="badge bg-@(IsPositive ? "success" : "danger") mt-2">
                            @if (IsPositive)
                            {
                                <i class="bi bi-arrow-up"></i>
                            }
                            else
                            {
                                <i class="bi bi-arrow-down"></i>
                            }
                            @Change
                        </span>
                    }
                </div>
                <div class="stat-icon">
                    <i class="bi bi-@Icon"></i>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "Metric";
    [Parameter] public string Value { get; set; } = "0";
    [Parameter] public string? Change { get; set; }
    [Parameter] public bool IsPositive { get; set; } = true;
    [Parameter] public string Icon { get; set; } = "graph-up";
}

<style>
    .stat-card .card {
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        transition: transform 0.2s;
    }

    .stat-card .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }

    .stat-icon {
        font-size: 2.5rem;
        color: #6c757d;
        opacity: 0.3;
    }
</style>