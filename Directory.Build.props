<Project>
  <!-- Shared properties for all projects in the solution -->
  <PropertyGroup>
    <!-- .NET Version -->
    <TargetFramework>net9.0</TargetFramework>
    <LangVersion>13.0</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <!-- Specific warnings to treat as errors (keeping only critical null-ref warnings) -->
    <WarningsAsErrors>CS8600;CS8602;CS8603;CS8604</WarningsAsErrors>

    <!-- Assembly Info -->
    <Company>NumbatWallet</Company>
    <Product>NumbatWallet Digital Wallet Solution</Product>
    <Copyright>Copyright Â© 2025 Government of Western Australia</Copyright>

    <!-- Versioning -->
    <VersionPrefix>1.0.0</VersionPrefix>
    <VersionSuffix>preview</VersionSuffix>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>

    <!-- Build Configuration -->
    <DebugType>portable</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);CS1591;CA1707;CA1805;CA1822;CA1852;CA1000;CA1304;CA1305;CA1860;CA1854;CA1862;CS1998;CA1848;CA1861;CS8618;CS8625;CS8766;CA1816;CA2227;IDE0290;IDE0028;IDE0290;IDE0300;IDE0305;CS8981</NoWarn>

    <!-- Source Link -->
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>

    <!-- Code Analysis -->
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <AnalysisLevel>latest-recommended</AnalysisLevel>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
  </PropertyGroup>

  <!-- Central Package Version Management -->
  <PropertyGroup>
    <ManagePackageVersionsCentrally>true</ManagePackageVersionsCentrally>
  </PropertyGroup>

  <ItemGroup>
    <!-- Source Link -->
    <PackageReference Include="Microsoft.SourceLink.GitHub" PrivateAssets="All" />
  </ItemGroup>
</Project>